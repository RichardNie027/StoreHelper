<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tlg.storehelper">
    <!-- WiFi以及访问网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 外部存储设备文件的权限 -->

    <application
        android:name="com.tlg.storehelper.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.common.SettingsActivity"></activity>
        <activity android:name=".activity.inventory.RedoRecordActivity" />
        <activity android:name="com.nec.lib.grantor.PermissionActivity" />
        <activity android:name=".activity.inventory.InventoryActivity" />
        <activity android:name=".activity.inventory.InventoryListActivity" />
        <activity android:name=".activity.inventory.InventoryListsActivity" />
        <activity android:name=".activity.common.HomeActivity" />
        <activity android:name=".activity.common.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>