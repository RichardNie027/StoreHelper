<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--按键未按下-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#00ffffff"></solid> <!--按键内部填充-->
            <stroke android:width="1dp" android:color="@color/colorPrimary"></stroke> <!--边框-->
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true"><!--按键按下时-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/colorPrimary"></solid>
            <stroke android:width="1dp" android:color="@color/colorPrimary"></stroke>
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
</selector>