<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.common.MainActivity">

    <View
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/store" />

    <Spinner
        android:id="@+id/spinner"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:prompt="@string/choice_store"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toBottomOf="@+id/ivStore"
        app:layout_constraintStart_toEndOf="@+id/ivStore"
        app:layout_constraintTop_toTopOf="@+id/ivStore" />

    <EditText
        android:id="@+id/etBarcode"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_white_selector"
        android:ems="10"
        android:hint="搭配款的条码或货号"
        android:inputType="text"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toStartOf="@+id/ivSettings"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <ImageView
        android:id="@+id/ivExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnExitClick"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="@+id/tvHeader"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        app:srcCompat="@drawable/exit" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="btnSettingsClick"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toStartOf="@+id/ivExit"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="ivSearchClick"
        app:layout_constraintEnd_toStartOf="@+id/ivPerformance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/ivPerformance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ivSearchClick"
        app:layout_constraintEnd_toStartOf="@+id/ivBill"
        app:layout_constraintStart_toEndOf="@+id/ivSearch"
        app:layout_constraintTop_toTopOf="@id/ivSearch"
        app:srcCompat="@drawable/performance" />

    <ImageView
        android:id="@+id/ivBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ivSearchClick"
        app:layout_constraintEnd_toStartOf="@+id/ivInventory"
        app:layout_constraintStart_toEndOf="@+id/ivPerformance"
        app:layout_constraintTop_toTopOf="@+id/ivPerformance"
        app:srcCompat="@drawable/bill" />

    <ImageView
        android:id="@+id/ivInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ivInventoryClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBill"
        app:layout_constraintTop_toTopOf="@+id/ivBill"
        app:srcCompat="@drawable/inventory" />

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="ivSearchClick"
        android:text="查货"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="@+id/ivSearch"
        app:layout_constraintStart_toStartOf="@+id/ivSearch"
        app:layout_constraintTop_toBottomOf="@+id/ivSearch" />

    <TextView
        android:id="@+id/tvPerformance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="ivSearchClick"
        android:text="业绩"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="@+id/ivPerformance"
        app:layout_constraintStart_toStartOf="@+id/ivPerformance"
        app:layout_constraintTop_toBottomOf="@+id/ivPerformance" />

    <TextView
        android:id="@+id/tvBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="ivSearchClick"
        android:text="开单"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="@+id/ivBill"
        app:layout_constraintStart_toStartOf="@+id/ivBill"
        app:layout_constraintTop_toBottomOf="@+id/ivBill" />

    <TextView
        android:id="@+id/tvInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="ivInventoryClick"
        android:text="盘点"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="@+id/ivInventory"
        app:layout_constraintStart_toStartOf="@+id/ivInventory"
        app:layout_constraintTop_toBottomOf="@+id/ivInventory" />

    <TextView
        android:id="@+id/tvBestSellingLabel"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="畅销款"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSearch" />

    <RadioGroup
        android:id="@+id/rgDimension"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintTop_toTopOf="@+id/tvBestSellingLabel"
        app:layout_constraintBottom_toBottomOf="@+id/tvBestSellingLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rbWeek"
            style="@style/Custom.LightTabRadioButtonStyle"
            android:layout_weight="1"
            android:checked="true"
            android:focusable="false"
            android:text="周销" />

        <RadioButton
            android:id="@+id/rbMonth"
            style="@style/Custom.LightTabRadioButtonStyle"
            android:layout_weight="1"
            android:focusable="false"
            android:text="月销" />

        <RadioButton
            android:id="@+id/rbNew"
            style="@style/Custom.LightTabRadioButtonStyle"
            android:layout_weight="1"
            android:focusable="false"
            android:text="新款" />
    </RadioGroup>

    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rgDimension"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimaryLight"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerLine" />

</androidx.constraintlayout.widget.ConstraintLayout>